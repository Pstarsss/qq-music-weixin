.hot_songlist{
  white-space: nowrap;
  height: 300rpx;
  position: relative;
}
.hot_songlist::after{
  content: '';
  display: block;
  position: absolute;
  width: 25px;
  height: 90%;
  top: 0;
  right: 0;
  background-image: linear-gradient(to right, transparent, transparent,#fff);
  color: rgb(255 255 255 / 0%);
  border-radius: 30px 0px 0px 10rpx;
}
