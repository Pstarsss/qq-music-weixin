
.container{
  min-height:100vh;
  background-image: linear-gradient(45deg, rgb(40,40,40),rgb(60,60,60),rgb(80,80,80),rgb(100,100,100),rgb(120,120,120));
}
.tabs{
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx 40rpx;
  color:#ffffff40;
}

.title-active-color{
  color:rgb(230,230,230);
}
.swiperclass{
  width: 100vw;
  min-height: 100vh;
  padding-top: 20rpx;
}
.song{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.songBanner{
  display: flex;
  justify-content: center;
  align-items: center;
}
.songBannerimage{
  width: calc( 100vw - 100rpx );
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
}
.songname_singer{
  width: calc( 100vw - 100rpx );
  color:rgba(230,230,230);
  padding-top:30rpx;
  padding-bottom: 30rpx;
}
.songname_title{
  display: flex;
  align-items: center;
  padding-top: 20rpx;
}
.singer_list{
  display: flex;
  align-items: center;
}

.lyric{
  white-space:pre-wrap;
}


