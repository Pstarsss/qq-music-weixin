}
.playbar{
  width: calc( 100vw - 100rpx );
  position: fixed;
  bottom:0;
  display: flex;
  align-items: center;
  background-color: rgb(183,193,206);
  border-radius: 50rpx;
  transition: all 0.3s;
  margin-left: 50rpx;
}
.playbar_cd {
  color: rgba(22, 22, 22, 0.86);
  font-size: 83rpx;
  padding-left: 28px;
}
._playbar_img{
  position: absolute;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
._playbar_text{
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 28rpx;
}
._playbar_name{
  padding-right: 10rpx;
}
._playbar_singer{
  display: flex;
  flex-direction: column;
  align-items: center;
}