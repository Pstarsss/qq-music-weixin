.icon-cd:before {
  content: "\e670";
}
.playbar{
  position: fixed;
  bottom:0;
  display: flex;
  align-items: center;
  background-color: rgb(183,193,206);
  border-radius: 50rpx;
  transition: all 0.5s;
  width: 100vw;
}
.playbar_cd {
  color: rgba(22, 22, 22, 0.86);
  font-size: 83rpx;
  padding-left: 28px;
}
._playbar_img{
  position: absolute;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
._playbar_text{
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 28rpx;
  flex:1;
}
._playbar_name{
  padding-right: 10rpx;
}
._playbar_singer{
  display: flex;
  align-items: center;
  flex:1;
  flex-wrap: wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 40rpx;
}
.play{
  padding: 0 10rpx;
}
.circle-progress{
  display: flex;
  align-items: center;
  padding-right: 10rpx;
  width: 150rpx;
  justify-content: space-around;
}
.pop_songlist{
  padding:40rpx 15prx 0;
}
.pop_total{
  padding: 10rpx 0;
}
.pop_item{
  display: flex;
  font-size: 32rpx;
  align-items: center;
  justify-content: start;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #ccc; 
}
.pop_{
  padding: 0 20rpx;
}
.pop_singer{
  max-width: 450rpx;
  overflow: hidden;
}